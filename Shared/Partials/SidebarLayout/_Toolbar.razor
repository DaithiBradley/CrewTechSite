
@using Authentication.Shared.Partials.SidebarLayout
<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
	<!--begin::Toolbar container-->
	<div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
		<!--begin::Actions-->
		<_PageTitle></_PageTitle>
		<div class="d-flex align-items-center gap-2 gap-lg-3">
			<AuthorizeView>
				<Authorized>
					<a href="Identity/Account/LogOut" class="btn btn-sm fw-bold btn-primary">Log Out</a>
				</Authorized>
				<NotAuthorized>
					<a href="Identity/Account/Register" class="btn btn-sm fw-bold bg-body btn-color-gray-700 btn-active-color-primary">Register</a>
					<!--end::Secondary button-->
					<!--begin::Primary button-->
					<a href="Identity/Account/Login" class="btn btn-sm fw-bold btn-primary">Log In</a>
				</NotAuthorized>
			</AuthorizeView>
		</div>
		<!--end::Actions-->
	</div>
	<!--end::Toolbar container-->
</div>
<!--end::Toolbar-->
